<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/activity_mainpage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/head_button"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="5dp"
        android:text="头像"   />


    <com.cloude.xmut.my_information.RoundImageView

        android:id="@+id/roundImageView"
        android:src="@drawable/image1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@color/nocolor"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"  />



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divide1"
        android:background="#22000000"
        app:layout_constraintTop_toBottomOf="@id/roundImageView"
        android:layout_marginTop="10dp"
        />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/change_name"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/divide1"
        app:layout_constraintTop_toTopOf="@id/divide1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="昵称"   />

    <TextView

        android:id="@+id/name1"
        android:textSize="17sp"
        android:textColor="@color/DimGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/divide1"
        app:layout_constraintTop_toTopOf="@id/divide1"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
          />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divide2"
        android:background="#22000000"
        app:layout_constraintTop_toBottomOf="@id/name1"
        android:layout_marginTop="15dp" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/change_sex"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/divide2"
        app:layout_constraintTop_toTopOf="@id/divide2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="性别"   />

    <TextView

        android:id="@+id/sex1"
        android:textSize="17sp"
        android:textColor="@color/DimGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/divide2"
        app:layout_constraintTop_toTopOf="@id/divide2"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divide3"
        android:background="#22000000"
        app:layout_constraintTop_toBottomOf="@id/sex1"
        android:layout_marginTop="15dp" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/change_age"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/divide3"
        app:layout_constraintTop_toTopOf="@id/divide3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="年龄"   />

    <TextView

        android:id="@+id/age1"
        android:textSize="17sp"
        android:textColor="@color/DimGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/divide3"
        app:layout_constraintTop_toTopOf="@id/divide3"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
         />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divide4"
        android:background="#22000000"
        app:layout_constraintTop_toBottomOf="@id/age1"
        android:layout_marginTop="15dp" />


    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/change_address"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/divide4"
        app:layout_constraintTop_toTopOf="@id/divide4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="地区"   />

    <TextView

        android:id="@+id/address1"
        android:textSize="17sp"
        android:textColor="@color/DimGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/divide4"
        app:layout_constraintTop_toTopOf="@id/divide4"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
       />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divide5"
        android:background="#22000000"
        app:layout_constraintTop_toBottomOf="@id/address1"
        android:layout_marginTop="15dp" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/change_self_sign"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/divide5"
        app:layout_constraintTop_toTopOf="@id/divide5"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:text="个性签名"   />

    <TextView

        android:id="@+id/self_signal"
        android:textSize="17sp"
        android:textColor="@color/DimGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/divide5"
        app:layout_constraintTop_toTopOf="@id/divide5"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divide6"
        android:background="#22000000"
        app:layout_constraintTop_toBottomOf="@id/self_signal"
        android:layout_marginTop="15dp" />



    <Button
        style="?android:attr/borderlessButtonStyle"

        android:id="@+id/exit_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/divide6"
        app:layout_constraintLeft_toLeftOf="@id/divide6"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="退出"
        android:textSize="20sp"  />



    <include
        layout="@layout/home_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>